<resources>
    <!-- Base application theme. -->
    <style name="Theme.Instapet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DE265C</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Small.Text" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/comfortaa_light</item>

        <item name="android:typeface">sans</item>
    </style>

    <style name="Medium.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/comfortaa_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Large.Text" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/comfortaa_regular</item>

        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>
</resources>